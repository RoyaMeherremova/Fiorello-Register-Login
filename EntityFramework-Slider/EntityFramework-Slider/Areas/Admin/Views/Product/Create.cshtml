@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Title</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>
        </div>
        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Description</label>
            <textarea class="form-control" id="category-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
        </div>
        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Price</label>
            <input type="number" step=".01" class="form-control" id="customFile" asp-for="Price" />  @*step=".01"---input type decimal olsun*@
            <span class="text-danger" asp-validation-for="Price">@ViewBag.error</span>
        </div>
        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Count</label>
            <input  class="form-control" id="customFile" asp-for="Count" />
            <span class="text-danger" asp-validation-for="Count">@ViewBag.error</span>
        </div>
        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Category</label>
            <select class="form-control" id="customFile" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>  @*asp-items-value ve text mentiqinde isleyir.select tagin valusu=asp-for(id mentiqene gore isleyir);select tagin texti=icindeki checkbox  data-name*@
        </div>
        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Photo</label>
            <input type="file" multiple class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos">@ViewBag.error</span>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>  @*checkeditor script-yeni yaz elave edende tagnan yaransin deye istifade olunur*@
    <script>
        CKEDITOR.replace("category-text")   /*text-areani CKEDITOR-LA evezle*/
    </script>

 }

