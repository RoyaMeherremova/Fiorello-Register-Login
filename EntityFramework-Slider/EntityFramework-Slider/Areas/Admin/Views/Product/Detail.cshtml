@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <h1 class="text-center">Expert detail</h1>
    <div style="display:flex;gap:30px">

        <div class="blog-content" style="width:200px;height:250px;">
            <label for="formFile" class="form-label">Photo</label>
            @foreach(var photo in Model.Images)
            {
                <img style="width:100%;height:100%;" src="~/img/@photo.Image" />
            }
            <div>
                <a class="btn btn-info" style="margin-top:30px" asp-action="Index">Back</a>
            </div>
            
        </div>
    
       
        <div>
            <div>
                <label for="formFile" class="form-label">Name</label>
                <input class="form-control" type="text" id="formFile" asp-for="Name" disabled="disabled">
            </div>
            <div style="margin-top:5px">
                <label for="formFile" class="form-label">Description</label>
                <input class="form-control" type="text" id="formFile" value="@ViewBag.description" disabled="disabled">
            </div>
            <div style="margin-top:5px">
                <label for="formFile" class="form-label">Price</label>
                <input class="form-control" type="text" id="formFile" asp-for="Price" disabled="disabled">
            </div>
            <div style="margin-top:5px">
                <label for="formFile" class="form-label">Count</label>
                <input class="form-control" type="text" id="formFile" asp-for="Count" disabled="disabled">
            </div>
            <div style="margin-top:5px">
                <label for="formFile" class="form-label">Category</label>
                <input class="form-control" type="text" id="formFile" asp-for="Category.Name" disabled="disabled">
            </div>

     
        </div>
      
    </div>
  
  
</div>
